CC = g++
CFLAGS = -std=c++11 -Wall -Wextra -pthread -Wvla
GCH = Matrix.hpp.gch
HEADERS = BadDimensionsException.h TraceException.h
TARGET = Matrix
FILES = $(HEADERS) README Makefile
TAR = ex3.tar

.DEFAULT_GOAL := $(TARGET)

.PHONY: default all clean tar $(TARGET)

$(TARGET): $(HEADERS)
	-x $(CC) -c $(CFLAGS) Matrix.hpp 

all: $(TARGET) tar


tar: $(FILES)
	tar cvf $(TAR) $(FILES) $(GCH)

clean:
	rm -f  $(GCH) $(TAR)
